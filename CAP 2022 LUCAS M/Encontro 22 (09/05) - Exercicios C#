002 - Desenvolva um programa que leia as duas notas de um aluno,  calcule e mostre a sua média.

namespace CAP202204ConsoleApp
{

    public class Program
    {
        static void Main(string[] args)
        {
            Desafio_002();
            Console.ReadLine();

        }
        public static void Desafio_002()
        {
            Console.Write("Qual a sua nota; ");
            int Nota1 = Convert.ToInt32(Console.ReadLine());
            Console.Write("Qual a sua nota 2; ");
            int Nota2 = Convert.ToInt32(Console.ReadLine());
            double media = Convert.ToDouble(Nota1 + Nota2) / 2;
            

            Console.WriteLine("Sua média é: {0}", media);
        }
    }
}

