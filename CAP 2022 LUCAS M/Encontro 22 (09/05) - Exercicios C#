003 - Escreva um programa que leia um valor em metros e o exiba convertido em centímetros e milímetros.

namespace CAP202204ConsoleApp
{

    public class Program
    {
        static void Main(string[] args)
        {            
            Desafio_003();
            Console.ReadLine();
            
        }   
        public static void Desafio_003()
        {
            Console.Write("Qual o valor desejado em metros; ");
            string metros = Console.ReadLine();
            int Centi = Convert.ToInt32 (metros) * 100;
            int Mili = Convert.ToInt32 (Centi) * 10;

            Console.WriteLine("Os valores em centimetro são: {0}", Centi);
            Console.WriteLine("Em milimetros são: {0}", Mili);                    
        }        
    }
}

