004 - Faça um programa que leia um número inteiro e mostre na sua tela a sua tabuada.


namespace CAP202204ConsoleApp
{

    public class Program
    {
        static void Main(string[] args)
        {            
            Desafio_004();
            Console.ReadLine();
            
        }   
        public static void Desafio_004()
        {
            Console.Write("Informe o número a exibir a tabuada; ");
            string numero = Console.ReadLine();
            int R1 = Convert.ToInt32(numero) * 1;
            int R2 = Convert.ToInt32(numero) * 2;
            int R3 = Convert.ToInt32(numero) * 3;
            int R4 = Convert.ToInt32(numero) * 4;
            int R5 = Convert.ToInt32(numero) * 5;
            int R6 = Convert.ToInt32(numero) * 6;
            int R7 = Convert.ToInt32(numero) * 7;
            int R8 = Convert.ToInt32(numero) * 8;
            int R9 = Convert.ToInt32(numero) * 9;
            int R10 = Convert.ToInt32(numero) * 10;


            Console.WriteLine("X 1 = {0}", R1);
            Console.WriteLine("X 2 = {0}", R2);
            Console.WriteLine("X 3 = {0}", R3);
            Console.WriteLine("X 4 = {0}", R4);
            Console.WriteLine("X 5 = {0}", R5);
            Console.WriteLine("X 6 = {0}", R6);
            Console.WriteLine("X 7 = {0}", R7);
            Console.WriteLine("X 8 = {0}", R8);
            Console.WriteLine("X 9 = {0}", R9);
            Console.WriteLine("X 10 = {0}", R10);
            Console.WriteLine("Fim");
        }        
    }
}

